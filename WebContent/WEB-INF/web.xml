<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>CampusConnect</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <display-name>Servlet</display-name>
  <servlet>
    <servlet-name>HashtagServlet</servlet-name>
    <servlet-class>com.hashtag.SearchHashtagServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HashtagServlet</servlet-name>
    <url-pattern>/ht</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ViewHashtag</servlet-name>
    <servlet-class>com.hashtag.ViewHashtagServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ViewHashtag</servlet-name>
    <url-pattern>/newview</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CreateHashtag</servlet-name>
    <servlet-class>com.hashtag.CreateHashtagServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreateHashtag</servlet-name>
    <url-pattern>/ch</url-pattern>
  </servlet-mapping>
</web-app>